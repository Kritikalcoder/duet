-- gradient descent
let main = pλ m  : ℕ,
              n  : ℕ,
              ε  : ℝ⁺,
              α  : ℝ⁺,
              k  : ℕ
              .
              xs : 𝕄 [L∞ U|m,n] 𝔻,
              ys : 𝕄 [L∞ U|m,1] 𝔻,
              α  : ℝ⁺[α],
              ε  : ℝ⁺[ε],
              k  : ℕ[k],
              η  : ℝ
              ⇒
  -- let k  = ℕ[1000] in
  -- let δ  = ℝ⁺[0.000001] in
  -- let δ′ = ℝ⁺[0.000001] in
  -- let η  = ℝ⁺[0.1] in
  let m₀ = mcreate[ L∞ | ℕ[1] , cols xs ] { i , j ⇒ 0.0 } in
  loop k on m₀ <xs,ys> { a, θ ⇒
    let s = ℝ⁺[1.0] / real (rows xs) in
    g ← mgauss[ s , α, ε ] <xs,ys> { ∇[ LR | θ ; mclip[L2] xs, ys ] } ;
    return mmap θ , mmap g { x ⇒ η ⋅ x } { x , y ⇒ x - y }
  }
in main
