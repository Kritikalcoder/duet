-- gradient descent
{- a multiline
comment
{- nested -} -}
let main = pλ m  : ℕ,
              n  : ℕ,
              ε  : ℝ⁺,
              k  : ℕ,
              δ  : ℝ⁺,
              δ′ : ℝ⁺,
              η  : ℝ⁺
              .
              xs : 𝕄[L2 U|m,n] 𝔻,
              ys : 𝕄[L2 U|m,1] 𝔻,
              ε  : ℝ⁺[ε],
              k  : ℕ[k],
              δ  : ℝ⁺[δ],
              δ′ : ℝ⁺[δ′],
              η  : ℝ⁺[η]
              ⇒
  let k  = ℕ[1000] in
  let δ  = ℝ⁺[0.000001] in
  let δ′ = ℝ⁺[0.000001] in
  let η  = ℝ⁺[0.1] in
  let m₀ = mcreate[ L2 | ℕ[1] , cols xs ] { i , j ⇒ 0.0 } in
  loop[ δ′ ] k on m₀ <xs,ys> { a, θ ⇒ 
    let s = ℝ⁺[1.0] / real (rows xs) in
    g ← mgauss[ s , ε , δ ] <xs,ys> { L∇[ LR L2 | θ ; clip[L2] xs, ys ] } ;
    return θ - η ⋅ g
  }
in main
