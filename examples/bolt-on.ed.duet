-- gradient descent
-- output perturbation
-- a la Wu et al.
-- per-iteration bound
-- https://arxiv.org/abs/1606.04722

let main = pλ m  : ℕ,
              n  : ℕ,
              ε  : ℝ⁺,
              k  : ℕ,
              δ  : ℝ⁺,
              δ′ : ℝ⁺
              .
              xs : 𝕄 [L∞, U|m, n⋅𝔻 ] ,
              ys : 𝕄 [L∞, U|m, 1⋅𝔻 ] ,
              ε  : ℝ⁺[ε],
              k  : ℕ[k],
              δ  : ℝ⁺[δ],
              δ′ : ℝ⁺[δ′],
              η  : ℝ
              ⇒
  let m₀ = mcreate[ L2 | ℕ[1] , cols xs ] { i , j ⇒ 0.0 } in
  let c = box (mclip[L2] xs) in
  let s = (real k) / real (rows xs) in
  g ← mgauss[ s , ε , δ ] <xs,ys> { 
        loop k on m₀ { a, θ ⇒
          let g = ∇[ LR | θ ; unbox c , ys ] in
          mmap θ , mmap g { x ⇒ η ⋅ x } { x , y ⇒ x - y }
        } };
  return g

in return main
